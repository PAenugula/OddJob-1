<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.paen3.oddjob3.TagsFragment">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/locpro" />

    <Button
        android:id="@+id/button3time"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/forwardarrow" />
    <Button
        android:id="@+id/button2tag"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/backarrow" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Tell us where you need help."
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="5"
        android:textColor="?android:attr/textColorTertiaryInverse"
        android:textSize="170sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="13dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:backgroundTint="?android:attr/textColorTertiaryInverse"
        android:ems="10"
        android:hint="Street Address"
        android:textColorHint="@color/white"
        android:inputType="textPostalAddress" />
    <EditText
        android:id="@+id/editText4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/button2loc"

        android:backgroundTint="?android:attr/textColorTertiaryInverse"
        android:ems="10"
        android:hint="Zipcode"
        android:textColorHint="@color/white"
        android:inputType="number" />
    <EditText
        android:id="@+id/editText5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_toEndOf="@+id/editText4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="?android:attr/textColorTertiaryInverse"
        android:ems="10"
        android:hint="City"
        android:textColorHint="@color/white"
        android:inputType="number" />
    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_marginStart="13dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:backgroundTint="?android:attr/textColorTertiaryInverse"
        android:ems="10"
        android:hint="Street Address"
        android:textColorHint="@color/white"
        android:inputType="textPostalAddress" />


</RelativeLayout>
