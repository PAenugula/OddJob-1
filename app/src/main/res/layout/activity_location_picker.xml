<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradorangetored"
    tools:context="com.tamir.offen.OddJob.LocationPickerActivity">



    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/rlocpro" />

    <Button
        android:id="@+id/button2time"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/forwardarrow" />

    <Button
        android:id="@+id/button3price"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/backarrow" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:fontFamily="@font/lato"
        android:text="Where is your OddJob located?"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="250dp"
        android:layout_alignTop="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        app:srcCompat="@drawable/shadowfour" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        app:srcCompat="@drawable/fadingline" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@id/imageView3"
        android:layout_marginTop="-15dp"
        android:layout_alignStart="@id/textView3">

        <RadioButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Current Location"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato"
            android:background="@drawable/whitesimline"
            android:buttonTint="@color/white"
            />
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Custom Location"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/lato"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:background="@drawable/whitesimline"
            android:buttonTint="@color/white"/>

    </RadioGroup>

    <EditText
        android:id="@+id/editText7"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:text="Street Address"
        android:textSize="15sp"
        android:textColor="@color/TransparentWhite"
        android:fontFamily="@font/lato"
        android:background="@drawable/whitesimline"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@id/editText7"
        android:layout_below="@id/editText7"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:textSize="15sp"
        android:textColor="@color/TransparentWhite"
        android:fontFamily="@font/lato"
        android:background="@drawable/whitesimline"
        android:inputType="textPersonName"
        android:text="City" />
    <EditText
        android:id="@+id/editText9"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/editText8"
        android:layout_marginStart="15dp"
        android:layout_below="@id/editText7"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:textSize="15sp"
        android:textColor="@color/TransparentWhite"
        android:fontFamily="@font/lato"
        android:background="@drawable/whitesimline"
        android:inputType="number"
        android:text="ZIP" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editText8"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:text="Street Address"
        android:textSize="15sp"
        android:textColor="@color/TransparentWhite"
        android:fontFamily="@font/lato"
        android:background="@drawable/whitesimline"
        android:inputType="textPostalAddress" />



</RelativeLayout>
