<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context="com.tamir.offen.OddJob.BottomSheetActivity">
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/back_to_map"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/uparrow"
        />

    <TextView
        android:id="@+id/workPreviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Work Preview"
        android:textColor="@color/black"
        android:fontFamily="@font/lato"
        android:textSize="45sp"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/dollasign"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/legit"
            android:layout_alignStart="@+id/pricePreview"
            android:layout_marginStart="-20dp"
            android:text="$"/>
        <TextView
            android:id="@+id/pricePreview"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textColor="@color/legit"
            android:text="00.00"/>
        <!--<TextView-->
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/lato"
        android:text="Ends:"/>
        <!--//   <TextView-->
        android:id="@+id/EndDatePreview"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18dp"
        android:fontFamily="@font/lato_thin"
        android:textColor="@color/Black"
        android:layout_marginEnd="0dp"
        android:layout_alignParentEnd="true"
        android:text="MM/DD/YY"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="70dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STARTS"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/lato"
            android:id="@+id/start_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENDS"
            android:textSize="18dp"
            android:id="@+id/end_title"
            android:textColor="@color/black"
            android:fontFamily="@font/lato"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/start_title"
            android:id="@+id/start_date_display"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:text="12/34/56"
            android:layout_below="@+id/start_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/end_title"
            android:id="@+id/end_date_display"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:text="78/9/10"
            android:layout_below="@+id/start_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/start_title"
            android:id="@+id/start_time_display"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:text="12:00"
            android:layout_below="@+id/start_date_display"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/end_title"
            android:id="@+id/end_time_display"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:text="12:00"
            android:layout_below="@+id/end_date_display"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:inputType="textMultiLine"
            android:fontFamily="@font/lato"
            />

    </ScrollView>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/moreDetails"
           android:fontFamily="@font/lato"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:textColor="@color/white"
           android:background="@color/legit"
           android:text="More Details" />
   </RelativeLayout>

</LinearLayout>
