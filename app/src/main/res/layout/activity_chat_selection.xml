<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightCream"
    tools:context="com.tamir.offen.OddJob.Messaging.ChatSelectionActivity">

    <EditText
        android:id="@+id/editTextSearchEmail"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/search_background"
        android:fontFamily="@font/lato_thin_italic"
        android:hint="Search by email"
        android:inputType="textEmailAddress"
        android:paddingBottom="2dp"
        android:paddingStart="50dp"
        android:textColorHint="@color/TransparentWhite"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/listViewUsers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="35dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_search_grey_500_48dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextSearchEmail"
        app:layout_constraintEnd_toEndOf="@+id/editTextSearchEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextSearchEmail"
        app:layout_constraintTop_toTopOf="@+id/editTextSearchEmail"
        app:layout_constraintVertical_bias="0.0" />


    <ListView
        android:id="@+id/listViewUsers"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextSearchEmail" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavView_Bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_grey_border_top"
        app:itemIconTint="@color/navitemcolors"
        app:itemTextColor="@color/navitemcolors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewUsers"
        app:menu="@menu/nav_items"></android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>
